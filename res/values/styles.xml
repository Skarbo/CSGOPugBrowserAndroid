<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="ServerStatus" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">30dp</item>
        <item name="android:maxHeight">32dip</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ServerStatus.Available" parent="@style/ServerStatus">
        <item name="android:background">@drawable/server_status_tile_available</item>
        <item name="android:text">@string/server_status_available_letter</item>
    </style>

    <style name="ServerStatus.Waiting" parent="@style/ServerStatus">
        <item name="android:background">@drawable/server_status_tile_waiting</item>
        <item name="android:text">@string/server_status_waiting_letter</item>
    </style>

    <style name="ServerStatus.Live" parent="@style/ServerStatus">
        <item name="android:background">@drawable/server_status_tile_live</item>
        <item name="android:text">@string/server_status_live_letter</item>
    </style>

    <style name="ServerStatus.Live.Score" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TableRowPlayer">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TableRowPlayer.Header" parent="@style/TableRowPlayer">
        <item name="android:padding">4dip</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TableRowPlayer.Header.Stats" parent="@style/TableRowPlayer.Header">
        <item name="android:paddingRight">6dip</item>
        <item name="android:paddingLeft">6dip</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="TableRowPlayer.Team" parent="@style/TableRowPlayer">
        <item name="android:padding">4dip</item>
    </style>

    <style name="TableRowPlayer.Player" parent="@style/TableRowPlayer">
        <item name="android:padding">4dip</item>
    </style>

    <style name="TableRowPlayer.Player.Name" parent="@style/TableRowPlayer.Player">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
    </style>

    <style name="TableRowPlayer.Player.Stats" parent="@style/TableRowPlayer.Player">
        <item name="android:paddingRight">6dip</item>
        <item name="android:paddingLeft">6dip</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PlayerStats" parent="@android:style/TextAppearance"></style>
    
    <style name="PlayerStats.None" parent="@style/PlayerStats">
        <item name="android:textColor">@color/text_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:padding">4dip</item>        
    </style>

    <style name="PlayerStats.Header" parent="@style/PlayerStats">
        <item name="android:textSize">12sp</item>
        <item name="android:padding">2dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PlayerStats.Header.Item" parent="@style/PlayerStats.Header">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="PlayerStats.Player" parent="@style/PlayerStats">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:padding">2dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PlayerStats.Player.Stat" parent="@style/PlayerStats.Player">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Profile" parent="@android:style/TextAppearance"></style>

    <style name="Profile.Title" parent="@style/Profile">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Profile.Stats.Title" parent="@style/Profile">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Profile.Stats" parent="@style/Profile">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Profile.Stats.Subtitle" parent="@style/Profile.Stats">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_lighter</item>
    </style>

    <style name="Profile.Top.Stat" parent="@style/Profile">
        <item name="android:padding">2dip</item>>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Profile.Top.Header" parent="@style/Profile">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_lighter</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">2dip</item>
    </style>

</resources>