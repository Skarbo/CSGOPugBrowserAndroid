<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dip"
    android:background="@drawable/tablerow_selector"
    android:baselineAligned="false"
    android:clickable="true"
    android:weightSum="5" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/matchStatsPlayerImageView"
            android:layout_width="30dip"
            android:layout_height="match_parent"
            android:layout_margin="4dip"
            android:contentDescription="@string/player_image"
            android:scaleType="fitCenter"
            android:src="@color/background_light" />

        <TextView
            android:id="@+id/matchStatsPlayerTextView"
            style="@style/PlayerStats.Player"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/player" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/matchStatsPlayerContainerLayout"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="3"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>